[core]
  editor = vim
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf = false

[user]
  name = Alex Au
  email = alexakt@gmail.com

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  ci = commit
  co = checkout
  w = whatchanged

[push]
  default = simple

[diff]
  tool = vimdiff

[branch]
  autosetupmerge = always
